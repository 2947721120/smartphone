<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#009688</item>

        <item name="colorControlNormal">#ffffff</item>


        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/group_header</item>
    </style>

    <style name="BarAppTheme" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <color name="group_header">#B6B6B6</color>
    <color name="textColorPrimary">#212121</color>
    <color name="textColorSecondary">#727272</color>

    <style name="PhoneNumber">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="PhoneNumberSecond">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/default_margin_4</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PhoneNumberIcon">
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:maxWidth">52dip</item>
        <item name="android:maxHeight">52dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
