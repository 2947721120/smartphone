<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_A200</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <color name="material_blue_500">#4785f4</color>
    <color name="material_blue_700">#3767d6</color>
    <color name="material_blue_A200">#d44785f4</color>

    <style name="PhoneNumber">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
